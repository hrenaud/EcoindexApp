#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Add node/npm to PATH if not already present
if ! command -v npx >/dev/null 2>&1; then
    NODE_PATH=$(command -v node 2>/dev/null | xargs dirname 2>/dev/null)
    if [ -n "$NODE_PATH" ]; then
        export PATH="$PATH:$NODE_PATH"
    fi
fi

npx --no -- commitlint --edit $1

